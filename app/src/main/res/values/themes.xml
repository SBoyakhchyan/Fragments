<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fragments" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/plane_bg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="firstFragmentBtn">
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="second_fragment_back_btn">
        <item name="android:background">@drawable/second_fragment_back_btn</item>
    </style>

    <style name="second_fragment_texts">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
    </style>

    <style name="second_fragment_texts1" parent="second_fragment_texts">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_30sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="second_fragment_texts2" parent="second_fragment_texts">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/dimen_25sp</item>
    </style>

    <style name="instagram_logo_style">

        <item name="android:textColor">@color/white</item>
        //TODO use resource
        <item name="android:textSize">35sp</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:layout_marginTop">150dp</item>
    </style>

    <style name="fill_fields_tag">
        <item name="android:layout_marginTop">@dimen/dimens_10</item>
        //TODO use resource
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="forgot_password" parent="fill_fields_tag">
        <item name="android:layout_marginTop">@dimen/dimens_10</item>
        //TODO use resource
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>